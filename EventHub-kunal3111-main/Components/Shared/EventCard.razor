@using EventHub.Models

@code {
    [Parameter]
    public Event? Event { get; set; }

    [Parameter]
    public EventCallback<Event> OnDelete { get; set; }

    private async Task HandleDelete()
    {
        if (OnDelete.HasDelegate)
        {
            await OnDelete.InvokeAsync(Event);
        }
    }
}
<div class="col col-lg-5">
    <div class="card m-5">
        <div class="card-img-top bg-secondary-subtle fs-1 d-grid justify-content-center align-content-center p-8">
            <i class="bi bi-calendar-check"></i>
        </div>
        <div class="card-body">
            <h5 class="card-title mb-3">@Event?.Title</h5>
            <p class="card-text text-danger mb-3">@Event?.Date.ToString("ddd, MMM d, yyyy")</p>
            <h6 class="card-subtitle mb-2 text-muted">@Event?.Email</h6>
            <div class="d-flex justify-content-center mt-7">
                <button class="btn btn-sm btn-danger" @onclick="HandleDelete">Delete</button>
            </div>
        </div>
    </div>
</div>